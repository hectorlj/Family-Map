<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:layout_marginRight="8dp"
    android:layout_marginLeft="8dp"
    android:padding="5dp"
    android:id="@+id/makePersonAreaClickable" android:focusable="true">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:id="@+id/event_img_child"
            android:visibility="visible"
            android:layout_alignParentStart="true" android:contentDescription="@string/todo" />
        <TextView
            android:layout_toEndOf="@id/event_img_child"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/child_description"
            android:textSize="15sp"
            android:textStyle="bold"
            android:padding="4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_below="@id/child_description"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/event_img_child"
            android:id="@+id/child_city"
            android:textSize="15sp"
            android:padding="4dp"/>
        <TextView
            android:layout_toEndOf="@id/child_city"
            android:layout_width="wrap_content"
            android:layout_below="@id/child_description"
            android:layout_height="wrap_content"
            android:id="@+id/child_country"
            android:textSize="15sp"
            android:padding="4dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/child_city"
            android:layout_toEndOf="@id/event_img_child"
            android:id="@+id/child_year"
            android:textSize="15sp"
            android:padding="4dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_toEndOf="@id/event_img_child"
            android:layout_height="wrap_content"
            android:layout_below="@+id/child_year"
            android:id="@+id/child_event_name"
            android:padding="4dp"
            android:textSize="15sp"
            android:textStyle="italic"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
</android.support.v7.widget.CardView>